// NOTE: Had to make this btn-ico so not to confilt
// with btn-icon above...
.btn.btn-ico {
  padding: 5px, 14px, 6px;
}

.btn.btn-ico > [class*="icon-"] {
  font-size: 1.3em;
  padding: 0;
  vertical-align: -.1em;
}

// when using an icon in a button, it needs some
// tweaking...
// TODO: Include this as a mod class like for .buttons
.btn > [class*="icon-"] {
  font-size: 1.1em;
  padding-right: .3em;
  vertical-align: -.1em;
}
