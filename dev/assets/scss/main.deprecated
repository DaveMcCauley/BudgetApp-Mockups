// some bootstrap redefintions to colors to our pallet
// TODO: this is quick and dirty. We *should* go back
// into the bootstrap css and customize it there?
// or consider compiling a custom bootstrap pack from
// getbootstrap.com?
pre {
  background-color: $white;
  margin-bottom: 20px;
  margin-top: 20px;
}

.alert-success {
  background-color: $green-100;
  border-color: $green-400;
}

.alert-info {
  background-color: $sky-100;
  border-color: $sky-400;
}

.alert-warning {
  background-color: $yellow-100;
  border-color: $yellow-400;
}

.alert-danger {
  background-color: $red-100;
  border-color: $red-400;
}

.has-success input,
textarea {
  background-color: $green-100;
  border-color: $green-400;
}

.has-warning input,
textarea {
  background-color: $yellow-100;
  border-color: $yellow-400;
}

.has-error input,
textarea {
  background-color: $red-100;
  border-color: $red-400;
}

.btn-primary {
  background-color: $blue-600;
  border-color: $blue-900;
}

.btn-primary:focus,
.btn-primary:hover,
.btn-primary:active:hover,
.btn-primary:active:focus,
.btn-primary.focus:active,
.btn-primary.active:hover,
.btn-primary.active:focus,
.btn-primary.active.focus,
.open > .btn-primary.dropdown-toggle:hover,
.open > .btn-primary.dropdown-toggle:focus,
.open > .btn-primary.dropdown-toggle.focus {
  background-color: $blue-800;
}

.btn-success {
  background: $green-600;
  border-color: $green-900;
}

.btn-success:focus,
.btn-success:hover,
