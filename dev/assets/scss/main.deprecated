.btn-danger {
  background: $red-600;
  border-color: $red-900;
}

.btn-danger:focus,
.btn-danger:hover,
.btn-danger:active:hover,
.btn-danger:active:focus,
.btn-danger.focus:active,
.btn-danger.active:hover,
